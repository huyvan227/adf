{
	"name": "SEND EMAIL IF DATA MISSING1",
	"properties": {
		"activities": [
			{
				"name": "If data is missing",
				"type": "IfCondition",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@pipeline().parameters.IS_DATA_MISSING",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "Send notification email",
							"type": "AzureFunctionActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"functionName": "send_email",
								"method": "POST",
								"body": {
									"value": "@concat('{\"to\": \"',pipeline().parameters.TO_EMAIL, '\",\"cc\": \"',pipeline().parameters.CC_EMAIL,'\",\"subject\": \"',pipeline().parameters.SUBJECT,'\",\"header\": \"',pipeline().parameters.HEADER,'\",\"message\": \"',pipeline().parameters.MESSAGE,'\",\"message_type\": \"html\"}')",
									"type": "Expression"
								}
							},
							"linkedServiceName": {
								"referenceName": "az_function_helpers",
								"type": "LinkedServiceReference"
							}
						}
					]
				}
			}
		],
		"parameters": {
			"TO_EMAIL": {
				"type": "string"
			},
			"CC_EMAIL": {
				"type": "string"
			},
			"IS_DATA_MISSING": {
				"type": "bool",
				"defaultValue": true
			},
			"SUBJECT": {
				"type": "string",
				"defaultValue": "subject"
			},
			"HEADER": {
				"type": "string",
				"defaultValue": "header"
			},
			"MESSAGE": {
				"type": "string",
				"defaultValue": "This is a test message"
			}
		},
		"annotations": [],
		"lastPublishTime": "2023-09-21T14:44:28Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}